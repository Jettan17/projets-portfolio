---
import BaseLayout from '../layouts/BaseLayout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import GeneratedImage from '../components/GeneratedImage.astro';
---

<BaseLayout title="Style Guide" description="Color palette and project image styles reference">
  <div class="style-guide">
    <header class="style-header">
      <div class="container">
        <h1>Style Guide</h1>
        <p class="style-description">Color palette and project image styles reference</p>
        <div class="theme-toggle-section">
          <span>Toggle Theme:</span>
          <ThemeToggle />
        </div>
      </div>
    </header>

    <!-- Colors Section -->
    <section class="style-section" id="colors">
      <div class="container">
        <h2>Colors</h2>
        <p class="section-description">Primary vibrant colors and their dark theme variants</p>

        <h3>Primary Colors</h3>
        <div class="color-grid">
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-primary);"></div>
            <span class="color-name">Primary</span>
            <code>--color-primary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-primary-dark);"></div>
            <span class="color-name">Primary Dark</span>
            <code>--color-primary-dark</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-secondary);"></div>
            <span class="color-name">Secondary</span>
            <code>--color-secondary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-secondary-dark);"></div>
            <span class="color-name">Secondary Dark</span>
            <code>--color-secondary-dark</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-accent);"></div>
            <span class="color-name">Accent</span>
            <code>--color-accent</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-highlight);"></div>
            <span class="color-name">Highlight</span>
            <code>--color-highlight</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-pop);"></div>
            <span class="color-name">Pop</span>
            <code>--color-pop</code>
          </div>
        </div>

        <h3>Backgrounds</h3>
        <div class="color-grid">
          <div class="color-swatch">
            <div class="swatch" style="background: var(--bg-primary); border: 1px solid var(--text-tertiary);"></div>
            <span class="color-name">BG Primary</span>
            <code>--bg-primary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--bg-secondary);"></div>
            <span class="color-name">BG Secondary</span>
            <code>--bg-secondary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--bg-tertiary);"></div>
            <span class="color-name">BG Tertiary</span>
            <code>--bg-tertiary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--bg-dark);"></div>
            <span class="color-name">BG Dark</span>
            <code>--bg-dark</code>
          </div>
        </div>

        <h3>Text Colors</h3>
        <div class="color-grid">
          <div class="color-swatch">
            <div class="swatch" style="background: var(--text-primary);"></div>
            <span class="color-name">Text Primary</span>
            <code>--text-primary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--text-secondary);"></div>
            <span class="color-name">Text Secondary</span>
            <code>--text-secondary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--text-tertiary);"></div>
            <span class="color-name">Text Tertiary</span>
            <code>--text-tertiary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--text-light); border: 1px solid var(--text-tertiary);"></div>
            <span class="color-name">Text Light</span>
            <code>--text-light</code>
          </div>
        </div>

        <h3>Gradients</h3>
        <div class="gradient-grid">
          <div class="gradient-swatch">
            <div class="gradient" style="background: var(--gradient-primary);"></div>
            <span class="gradient-name">Gradient Primary</span>
          </div>
          <div class="gradient-swatch">
            <div class="gradient" style="background: var(--gradient-secondary);"></div>
            <span class="gradient-name">Gradient Secondary</span>
          </div>
          <div class="gradient-swatch">
            <div class="gradient" style="background: var(--gradient-accent);"></div>
            <span class="gradient-name">Gradient Accent</span>
          </div>
          <div class="gradient-swatch">
            <div class="gradient" style="background: var(--gradient-hero);"></div>
            <span class="gradient-name">Gradient Hero</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Project Image Styles Section -->
    <section class="style-section" id="project-images">
      <div class="container">
        <h2>Project Image Styles</h2>
        <p class="section-description">6 unique visual styles for project card images, deterministically assigned per project</p>

        <div class="image-style-grid">
          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Orb Style" repoName="demo-x" />
            </div>
            <div class="image-style-info">
              <h4>Orb</h4>
              <p>Refined gradient ellipse with smooth blur effect</p>
              <code>style-orb</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Waves Style" repoName="test-2" />
            </div>
            <div class="image-style-info">
              <h4>Waves</h4>
              <p>Bold 3-layer SVG waves with gradient colors</p>
              <code>style-waves</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Corners Style" repoName="demo-alpha" />
            </div>
            <div class="image-style-info">
              <h4>Corners</h4>
              <p>Dual corner accents with glow effects</p>
              <code>style-corners</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Grain Style" repoName="demo-3" />
            </div>
            <div class="image-style-info">
              <h4>Grain</h4>
              <p>Noise texture overlay with gradient background</p>
              <code>style-grain</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Diagonal Style" repoName="demo-2" />
            </div>
            <div class="image-style-info">
              <h4>Diagonal</h4>
              <p>Single bold diagonal accent line with glow</p>
              <code>style-diagonal</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Duotone Style" repoName="demo-1" />
            </div>
            <div class="image-style-info">
              <h4>Duotone</h4>
              <p>Two-tone vertical split with fade</p>
              <code>style-duotone</code>
            </div>
          </div>
        </div>

        <h3>Color Generation</h3>
        <p class="section-description">Each project gets unique colors based on golden angle hue distribution</p>
        <div class="color-generation-demo">
          <div class="color-demo-row">
            <div class="color-demo-item">
              <div class="image-style-preview project-card" style="height: 120px;">
                <GeneratedImage title="Project Alpha" repoName="project-alpha" />
              </div>
              <code>project-alpha</code>
            </div>
            <div class="color-demo-item">
              <div class="image-style-preview project-card" style="height: 120px;">
                <GeneratedImage title="Project Beta" repoName="project-beta" />
              </div>
              <code>project-beta</code>
            </div>
            <div class="color-demo-item">
              <div class="image-style-preview project-card" style="height: 120px;">
                <GeneratedImage title="Project Gamma" repoName="project-gamma" />
              </div>
              <code>project-gamma</code>
            </div>
            <div class="color-demo-item">
              <div class="image-style-preview project-card" style="height: 120px;">
                <GeneratedImage title="Project Delta" repoName="project-delta" />
              </div>
              <code>project-delta</code>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .style-guide {
    padding-bottom: var(--space-16);
  }

  .style-header {
    background: var(--gradient-hero);
    padding: var(--space-16) 0;
    margin-bottom: var(--space-8);
    text-align: center;
  }

  .style-header h1 {
    color: var(--text-light);
    margin-bottom: var(--space-2);
  }

  .style-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
  }

  .theme-toggle-section {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    color: var(--text-light);
  }

  .style-section {
    padding: var(--space-12) 0;
    border-bottom: 1px solid var(--bg-tertiary);
  }

  .style-section:last-child {
    border-bottom: none;
  }

  .style-section h2 {
    margin-bottom: var(--space-2);
    font-size: var(--text-3xl);
  }

  .style-section h3 {
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    font-size: var(--text-xl);
    color: var(--text-secondary);
  }

  .section-description {
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
  }

  /* Colors */
  .color-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: var(--space-4);
  }

  .color-swatch {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .swatch {
    width: 80px;
    height: 80px;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }

  .color-name {
    font-weight: var(--font-medium);
    font-size: var(--text-sm);
  }

  .color-swatch code {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
  }

  .gradient-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-4);
  }

  .gradient-swatch {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .gradient {
    height: 60px;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }

  .gradient-name {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  /* Project Image Styles */
  .image-style-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .image-style-card {
    display: flex;
    flex-direction: column;
    background: var(--bg-secondary);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .image-style-preview {
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .image-style-preview.project-card:hover .style-orb .gradient-orb {
    opacity: 0.95;
    filter: blur(20px);
    transform: translate(-50%, -50%) scale(1.05);
  }

  .image-style-info {
    padding: var(--space-4);
  }

  .image-style-info h4 {
    margin-bottom: var(--space-1);
    font-size: var(--text-lg);
  }

  .image-style-info p {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    margin-bottom: var(--space-2);
  }

  .image-style-info code {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    background: var(--bg-tertiary);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  .color-generation-demo {
    background: var(--bg-secondary);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
  }

  .color-demo-row {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: var(--space-4);
  }

  .color-demo-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .color-demo-item .image-style-preview {
    width: 100%;
    border-radius: var(--radius-lg);
  }

  .color-demo-item code {
    font-size: var(--text-xs);
    color: var(--text-secondary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .style-header {
      padding: var(--space-12) 0;
    }

    .style-section h2 {
      font-size: var(--text-2xl);
    }
  }
</style>
