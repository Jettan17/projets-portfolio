---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import SkillBadge from '../components/SkillBadge.astro';
import SocialLinks from '../components/SocialLinks.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import GeneratedImage from '../components/GeneratedImage.astro';
---

<BaseLayout title="Style Guide" description="Design system showcase for testing and reference">
  <div class="style-guide">
    <header class="style-header">
      <div class="container">
        <h1>Style Guide</h1>
        <p class="style-description">Design system showcase for testing and reference</p>
        <div class="theme-toggle-section">
          <span>Toggle Theme:</span>
          <ThemeToggle />
        </div>
      </div>
    </header>

    <!-- Colors Section -->
    <section class="style-section" id="colors">
      <div class="container">
        <h2>Colors</h2>
        <p class="section-description">Primary vibrant colors and their dark theme variants</p>

        <h3>Primary Colors</h3>
        <div class="color-grid">
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-primary);"></div>
            <span class="color-name">Primary</span>
            <code>--color-primary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-primary-dark);"></div>
            <span class="color-name">Primary Dark</span>
            <code>--color-primary-dark</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-secondary);"></div>
            <span class="color-name">Secondary</span>
            <code>--color-secondary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-secondary-dark);"></div>
            <span class="color-name">Secondary Dark</span>
            <code>--color-secondary-dark</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-accent);"></div>
            <span class="color-name">Accent</span>
            <code>--color-accent</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-highlight);"></div>
            <span class="color-name">Highlight</span>
            <code>--color-highlight</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--color-pop);"></div>
            <span class="color-name">Pop</span>
            <code>--color-pop</code>
          </div>
        </div>

        <h3>Backgrounds</h3>
        <div class="color-grid">
          <div class="color-swatch">
            <div class="swatch" style="background: var(--bg-primary); border: 1px solid var(--text-tertiary);"></div>
            <span class="color-name">BG Primary</span>
            <code>--bg-primary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--bg-secondary);"></div>
            <span class="color-name">BG Secondary</span>
            <code>--bg-secondary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--bg-tertiary);"></div>
            <span class="color-name">BG Tertiary</span>
            <code>--bg-tertiary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--bg-dark);"></div>
            <span class="color-name">BG Dark</span>
            <code>--bg-dark</code>
          </div>
        </div>

        <h3>Text Colors</h3>
        <div class="color-grid">
          <div class="color-swatch">
            <div class="swatch" style="background: var(--text-primary);"></div>
            <span class="color-name">Text Primary</span>
            <code>--text-primary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--text-secondary);"></div>
            <span class="color-name">Text Secondary</span>
            <code>--text-secondary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--text-tertiary);"></div>
            <span class="color-name">Text Tertiary</span>
            <code>--text-tertiary</code>
          </div>
          <div class="color-swatch">
            <div class="swatch" style="background: var(--text-light); border: 1px solid var(--text-tertiary);"></div>
            <span class="color-name">Text Light</span>
            <code>--text-light</code>
          </div>
        </div>

        <h3>Gradients</h3>
        <div class="gradient-grid">
          <div class="gradient-swatch">
            <div class="gradient" style="background: var(--gradient-primary);"></div>
            <span class="gradient-name">Gradient Primary</span>
          </div>
          <div class="gradient-swatch">
            <div class="gradient" style="background: var(--gradient-secondary);"></div>
            <span class="gradient-name">Gradient Secondary</span>
          </div>
          <div class="gradient-swatch">
            <div class="gradient" style="background: var(--gradient-accent);"></div>
            <span class="gradient-name">Gradient Accent</span>
          </div>
          <div class="gradient-swatch">
            <div class="gradient" style="background: var(--gradient-hero);"></div>
            <span class="gradient-name">Gradient Hero</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Typography Section -->
    <section class="style-section" id="typography">
      <div class="container">
        <h2>Typography</h2>
        <p class="section-description">Font families, sizes, and weights</p>

        <h3>Font Families</h3>
        <div class="font-families">
          <div class="font-family">
            <span class="font-label">Heading Font (Plus Jakarta Sans):</span>
            <span style="font-family: var(--font-heading); font-size: var(--text-xl);">The quick brown fox jumps over the lazy dog</span>
          </div>
          <div class="font-family">
            <span class="font-label">Body Font (Plus Jakarta Sans):</span>
            <span style="font-family: var(--font-body);">The quick brown fox jumps over the lazy dog</span>
          </div>
          <div class="font-family">
            <span class="font-label">Mono Font:</span>
            <span style="font-family: var(--font-mono);">const code = "example";</span>
          </div>
        </div>

        <h3>Font Sizes</h3>
        <div class="font-sizes">
          <div class="font-size-row">
            <code>--text-xs</code>
            <span style="font-size: var(--text-xs);">Extra Small (0.75rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-sm</code>
            <span style="font-size: var(--text-sm);">Small (0.875rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-base</code>
            <span style="font-size: var(--text-base);">Base (1rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-lg</code>
            <span style="font-size: var(--text-lg);">Large (1.125rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-xl</code>
            <span style="font-size: var(--text-xl);">XL (1.25rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-2xl</code>
            <span style="font-size: var(--text-2xl);">2XL (1.5rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-3xl</code>
            <span style="font-size: var(--text-3xl);">3XL (1.875rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-4xl</code>
            <span style="font-size: var(--text-4xl);">4XL (2.25rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-5xl</code>
            <span style="font-size: var(--text-5xl);">5XL (3rem)</span>
          </div>
          <div class="font-size-row">
            <code>--text-6xl</code>
            <span style="font-size: var(--text-6xl);">6XL (3.75rem)</span>
          </div>
        </div>

        <h3>Font Weights</h3>
        <div class="font-weights">
          <div class="font-weight-row">
            <code>--font-normal</code>
            <span style="font-weight: var(--font-normal);">Normal (400)</span>
          </div>
          <div class="font-weight-row">
            <code>--font-medium</code>
            <span style="font-weight: var(--font-medium);">Medium (500)</span>
          </div>
          <div class="font-weight-row">
            <code>--font-semibold</code>
            <span style="font-weight: var(--font-semibold);">Semibold (600)</span>
          </div>
          <div class="font-weight-row">
            <code>--font-bold</code>
            <span style="font-weight: var(--font-bold);">Bold (700)</span>
          </div>
          <div class="font-weight-row">
            <code>--font-extrabold</code>
            <span style="font-weight: var(--font-extrabold);">Extra Bold (800)</span>
          </div>
        </div>

        <h3>Gradient Text</h3>
        <div class="gradient-text-examples">
          <span class="gradient-text" style="font-size: var(--text-3xl); font-weight: var(--font-bold);">Primary Gradient Text</span>
          <span class="gradient-text-secondary" style="font-size: var(--text-3xl); font-weight: var(--font-bold);">Secondary Gradient Text</span>
        </div>
      </div>
    </section>

    <!-- Spacing Section -->
    <section class="style-section" id="spacing">
      <div class="container">
        <h2>Spacing</h2>
        <p class="section-description">Spacing scale based on 4px (0.25rem) increments</p>

        <div class="spacing-scale">
          <div class="spacing-row">
            <code>--space-1</code>
            <div class="spacing-bar" style="width: var(--space-1);"></div>
            <span>0.25rem (4px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-2</code>
            <div class="spacing-bar" style="width: var(--space-2);"></div>
            <span>0.5rem (8px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-3</code>
            <div class="spacing-bar" style="width: var(--space-3);"></div>
            <span>0.75rem (12px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-4</code>
            <div class="spacing-bar" style="width: var(--space-4);"></div>
            <span>1rem (16px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-5</code>
            <div class="spacing-bar" style="width: var(--space-5);"></div>
            <span>1.25rem (20px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-6</code>
            <div class="spacing-bar" style="width: var(--space-6);"></div>
            <span>1.5rem (24px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-8</code>
            <div class="spacing-bar" style="width: var(--space-8);"></div>
            <span>2rem (32px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-10</code>
            <div class="spacing-bar" style="width: var(--space-10);"></div>
            <span>2.5rem (40px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-12</code>
            <div class="spacing-bar" style="width: var(--space-12);"></div>
            <span>3rem (48px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-16</code>
            <div class="spacing-bar" style="width: var(--space-16);"></div>
            <span>4rem (64px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-20</code>
            <div class="spacing-bar" style="width: var(--space-20);"></div>
            <span>5rem (80px)</span>
          </div>
          <div class="spacing-row">
            <code>--space-24</code>
            <div class="spacing-bar" style="width: var(--space-24);"></div>
            <span>6rem (96px)</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Buttons Section -->
    <section class="style-section" id="buttons">
      <div class="container">
        <h2>Buttons</h2>
        <p class="section-description">All button variants and sizes</p>

        <h3>Variants</h3>
        <div class="button-grid">
          <div class="button-group">
            <span class="button-label">Primary</span>
            <Button variant="primary">Primary Button</Button>
          </div>
          <div class="button-group">
            <span class="button-label">Secondary</span>
            <Button variant="secondary">Secondary Button</Button>
          </div>
          <div class="button-group">
            <span class="button-label">Outline</span>
            <Button variant="outline">Outline Button</Button>
          </div>
          <div class="button-group">
            <span class="button-label">Ghost</span>
            <Button variant="ghost">Ghost Button</Button>
          </div>
        </div>

        <h3>Sizes</h3>
        <div class="button-sizes">
          <div class="size-row">
            <span class="button-label">Small (sm)</span>
            <div class="size-buttons">
              <Button variant="primary" size="sm">Primary SM</Button>
              <Button variant="secondary" size="sm">Secondary SM</Button>
              <Button variant="outline" size="sm">Outline SM</Button>
              <Button variant="ghost" size="sm">Ghost SM</Button>
            </div>
          </div>
          <div class="size-row">
            <span class="button-label">Medium (md)</span>
            <div class="size-buttons">
              <Button variant="primary" size="md">Primary MD</Button>
              <Button variant="secondary" size="md">Secondary MD</Button>
              <Button variant="outline" size="md">Outline MD</Button>
              <Button variant="ghost" size="md">Ghost MD</Button>
            </div>
          </div>
          <div class="size-row">
            <span class="button-label">Large (lg)</span>
            <div class="size-buttons">
              <Button variant="primary" size="lg">Primary LG</Button>
              <Button variant="secondary" size="lg">Secondary LG</Button>
              <Button variant="outline" size="lg">Outline LG</Button>
              <Button variant="ghost" size="lg">Ghost LG</Button>
            </div>
          </div>
        </div>

        <h3>States</h3>
        <div class="button-states">
          <div class="button-group">
            <span class="button-label">Normal</span>
            <Button variant="primary">Normal</Button>
          </div>
          <div class="button-group">
            <span class="button-label">Disabled</span>
            <Button variant="primary" disabled>Disabled</Button>
          </div>
          <div class="button-group">
            <span class="button-label">Full Width</span>
            <Button variant="primary" fullWidth>Full Width Button</Button>
          </div>
        </div>

        <h3>As Links</h3>
        <div class="button-grid">
          <Button href="#" variant="primary">Link Primary</Button>
          <Button href="#" variant="secondary">Link Secondary</Button>
          <Button href="https://example.com" variant="outline" external>External Link</Button>
        </div>
      </div>
    </section>

    <!-- Skill Badges Section -->
    <section class="style-section" id="badges">
      <div class="container">
        <h2>Skill Badges</h2>
        <p class="section-description">Badge variants for displaying skills and tags</p>

        <h3>Variants</h3>
        <div class="badge-grid">
          <div class="badge-group">
            <span class="badge-label">Default</span>
            <div class="badges">
              <SkillBadge skill="TypeScript" variant="default" />
              <SkillBadge skill="React" variant="default" />
              <SkillBadge skill="Node.js" variant="default" />
            </div>
          </div>
          <div class="badge-group">
            <span class="badge-label">Primary</span>
            <div class="badges">
              <SkillBadge skill="TypeScript" variant="primary" />
              <SkillBadge skill="React" variant="primary" />
              <SkillBadge skill="Node.js" variant="primary" />
            </div>
          </div>
          <div class="badge-group">
            <span class="badge-label">Secondary</span>
            <div class="badges">
              <SkillBadge skill="TypeScript" variant="secondary" />
              <SkillBadge skill="React" variant="secondary" />
              <SkillBadge skill="Node.js" variant="secondary" />
            </div>
          </div>
          <div class="badge-group">
            <span class="badge-label">Accent</span>
            <div class="badges">
              <SkillBadge skill="TypeScript" variant="accent" />
              <SkillBadge skill="React" variant="accent" />
              <SkillBadge skill="Node.js" variant="accent" />
            </div>
          </div>
        </div>

        <h3>Common Skills</h3>
        <div class="badges-showcase">
          <SkillBadge skill="JavaScript" variant="default" />
          <SkillBadge skill="TypeScript" variant="primary" />
          <SkillBadge skill="React" variant="secondary" />
          <SkillBadge skill="Vue" variant="accent" />
          <SkillBadge skill="Astro" variant="primary" />
          <SkillBadge skill="Next.js" variant="default" />
          <SkillBadge skill="TailwindCSS" variant="secondary" />
          <SkillBadge skill="Node.js" variant="accent" />
          <SkillBadge skill="Python" variant="primary" />
          <SkillBadge skill="PostgreSQL" variant="secondary" />
          <SkillBadge skill="Docker" variant="default" />
          <SkillBadge skill="AWS" variant="accent" />
        </div>
      </div>
    </section>

    <!-- Social Links Section -->
    <section class="style-section" id="social">
      <div class="container">
        <h2>Social Links</h2>
        <p class="section-description">Social link sizes and variants</p>

        <h3>Sizes</h3>
        <div class="social-grid">
          <div class="social-group">
            <span class="social-label">Small (sm)</span>
            <SocialLinks size="sm" />
          </div>
          <div class="social-group">
            <span class="social-label">Medium (md)</span>
            <SocialLinks size="md" />
          </div>
          <div class="social-group">
            <span class="social-label">Large (lg)</span>
            <SocialLinks size="lg" />
          </div>
        </div>

        <h3>Variants</h3>
        <div class="social-variants">
          <div class="social-variant-group">
            <span class="social-label">Default (on light bg)</span>
            <div class="social-demo-light">
              <SocialLinks size="md" variant="default" />
            </div>
          </div>
          <div class="social-variant-group">
            <span class="social-label">Light (on dark bg)</span>
            <div class="social-demo-dark">
              <SocialLinks size="md" variant="light" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Project Image Styles Section -->
    <section class="style-section" id="project-images">
      <div class="container">
        <h2>Project Image Styles</h2>
        <p class="section-description">6 unique visual styles for project card images, deterministically assigned per project</p>

        <div class="image-style-grid">
          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Orb Style" repoName="demo-x" />
            </div>
            <div class="image-style-info">
              <h4>Orb</h4>
              <p>Refined gradient ellipse with smooth blur effect</p>
              <code>style-orb</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Waves Style" repoName="test-2" />
            </div>
            <div class="image-style-info">
              <h4>Waves</h4>
              <p>Bold 3-layer SVG waves with gradient colors</p>
              <code>style-waves</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Corners Style" repoName="demo-alpha" />
            </div>
            <div class="image-style-info">
              <h4>Corners</h4>
              <p>Dual corner accents with glow effects</p>
              <code>style-corners</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Grain Style" repoName="demo-3" />
            </div>
            <div class="image-style-info">
              <h4>Grain</h4>
              <p>Noise texture overlay with gradient background</p>
              <code>style-grain</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Diagonal Style" repoName="demo-2" />
            </div>
            <div class="image-style-info">
              <h4>Diagonal</h4>
              <p>Single bold diagonal accent line with glow</p>
              <code>style-diagonal</code>
            </div>
          </div>

          <div class="image-style-card">
            <div class="image-style-preview project-card">
              <GeneratedImage title="Duotone Style" repoName="demo-1" />
            </div>
            <div class="image-style-info">
              <h4>Duotone</h4>
              <p>Two-tone vertical split with fade</p>
              <code>style-duotone</code>
            </div>
          </div>
        </div>

        <h3>Color Generation</h3>
        <p class="section-description">Each project gets unique colors based on golden angle hue distribution</p>
        <div class="color-generation-demo">
          <div class="color-demo-row">
            <div class="color-demo-item">
              <div class="image-style-preview project-card" style="height: 120px;">
                <GeneratedImage title="Project Alpha" repoName="project-alpha" />
              </div>
              <code>project-alpha</code>
            </div>
            <div class="color-demo-item">
              <div class="image-style-preview project-card" style="height: 120px;">
                <GeneratedImage title="Project Beta" repoName="project-beta" />
              </div>
              <code>project-beta</code>
            </div>
            <div class="color-demo-item">
              <div class="image-style-preview project-card" style="height: 120px;">
                <GeneratedImage title="Project Gamma" repoName="project-gamma" />
              </div>
              <code>project-gamma</code>
            </div>
            <div class="color-demo-item">
              <div class="image-style-preview project-card" style="height: 120px;">
                <GeneratedImage title="Project Delta" repoName="project-delta" />
              </div>
              <code>project-delta</code>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Shadows Section -->
    <section class="style-section" id="shadows">
      <div class="container">
        <h2>Shadows</h2>
        <p class="section-description">Box shadow scale and colorful shadows</p>

        <h3>Standard Shadows</h3>
        <div class="shadow-grid">
          <div class="shadow-box" style="box-shadow: var(--shadow-sm);">
            <code>--shadow-sm</code>
          </div>
          <div class="shadow-box" style="box-shadow: var(--shadow-md);">
            <code>--shadow-md</code>
          </div>
          <div class="shadow-box" style="box-shadow: var(--shadow-lg);">
            <code>--shadow-lg</code>
          </div>
          <div class="shadow-box" style="box-shadow: var(--shadow-xl);">
            <code>--shadow-xl</code>
          </div>
          <div class="shadow-box" style="box-shadow: var(--shadow-2xl);">
            <code>--shadow-2xl</code>
          </div>
        </div>

        <h3>Colorful Shadows</h3>
        <div class="shadow-grid">
          <div class="shadow-box" style="box-shadow: var(--shadow-primary);">
            <code>--shadow-primary</code>
          </div>
          <div class="shadow-box" style="box-shadow: var(--shadow-secondary);">
            <code>--shadow-secondary</code>
          </div>
          <div class="shadow-box" style="box-shadow: var(--shadow-accent);">
            <code>--shadow-accent</code>
          </div>
        </div>
      </div>
    </section>

    <!-- Border Radius Section -->
    <section class="style-section" id="radius">
      <div class="container">
        <h2>Border Radius</h2>
        <p class="section-description">Border radius scale</p>

        <div class="radius-grid">
          <div class="radius-box" style="border-radius: var(--radius-sm);">
            <code>--radius-sm</code>
