---
/**
 * LogoSplash - First section showing the large logo
 * Fades out as users scroll to the next section
 */
---

<section class="logo-splash panel">
  <div class="logo-bg" aria-hidden="true">
    <div class="logo-blob logo-blob-1"></div>
    <div class="logo-blob logo-blob-2"></div>
    <div class="logo-blob logo-blob-3"></div>
  </div>

  <div class="logo-content">
    <div class="logo-wrapper">
      <div class="logo-projets">
        <!-- Connected PJ monogram (scaled from favicon) + text -->
        <svg class="logo-pj" viewBox="0 0 32 32" fill="none" aria-hidden="true">
          <!-- P shape (top) -->
          <rect class="mono-shape" x="13" y="1" width="4" height="16" rx="1.5"/>
          <rect class="mono-shape" x="13" y="1" width="12" height="4" rx="1.5"/>
          <rect class="mono-shape" x="21" y="1" width="4" height="9" rx="1.5"/>
          <rect class="mono-shape" x="13" y="6" width="12" height="4" rx="1.5"/>

          <!-- J shape (bottom) - stem connects to P's left stem -->
          <rect class="mono-shape" x="13" y="13" width="4" height="18" rx="1.5"/>
          <rect class="mono-shape" x="2" y="23" width="4" height="8" rx="1.5"/>
          <rect class="mono-shape" x="2" y="27" width="15" height="4" rx="1.5"/>
        </svg>

        <!-- Text positioned to the right -->
        <div class="logo-text-col">
          <span class="logo-ro">ro</span>
          <span class="logo-ets">ets</span>
        </div>
      </div>
    </div>

    <p class="logo-tagline">Creative Web Development</p>
  </div>

  <div class="logo-scroll-indicator" aria-hidden="true">
    <span class="scroll-text">Scroll to explore</span>
    <div class="scroll-arrow">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M5 12l7 7 7-7"/>
      </svg>
    </div>
  </div>
</section>

<style>
  .logo-splash {
    position: relative;
    height: 100vh;
    height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--bg-primary);
    overflow: hidden;
  }

  /* Background blobs */
  .logo-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .logo-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.4;
  }

  .logo-blob-1 {
    top: 10%;
    left: 20%;
    width: 400px;
    height: 400px;
    background: var(--color-primary);
  }

  .logo-blob-2 {
    bottom: 20%;
    right: 15%;
    width: 350px;
    height: 350px;
    background: var(--color-secondary-dark);
  }

  .logo-blob-3 {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 500px;
    height: 500px;
    background: #7B68EE;
    opacity: 0.2;
  }

  /* Content */
  .logo-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-4);
  }

  .logo-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-6);
  }

  .logo-projets {
    position: relative;
    display: inline-block;
    transform: translateX(-12%);
  }

  .logo-pj {
    width: clamp(6rem, 18vw, 12rem);
    height: auto;
    display: block;
  }

  .mono-shape {
    fill: var(--text-primary);
    transition: fill 0.3s ease;
  }

  .logo-text-col {
    position: absolute;
    top: 0;
    right: -2%;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    padding: 18% 0 0 0;
  }

  .logo-ro,
  .logo-ets {
    font-family: var(--font-sans);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    line-height: 1;
  }

  .logo-ro {
    font-size: clamp(1.8rem, 5.5vw, 3.5rem);
    margin-top: 25%;
  }

  .logo-ets {
    font-size: clamp(1.8rem, 5.5vw, 3.5rem);
  }

  .logo-tagline {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin: 0;
  }

  /* Scroll indicator - use left/right: 0 for true centering */
  .logo-scroll-indicator {
    position: absolute;
    bottom: var(--space-8);
    left: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    color: var(--text-tertiary);
  }

  .scroll-text {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .scroll-arrow {
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(8px); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .logo-main {
      width: clamp(220px, 80vw, 320px);
    }

    .logo-tagline {
      font-size: var(--text-base);
    }
  }
</style>
