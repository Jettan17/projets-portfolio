---
import Button from './Button.astro';
import SocialLinks from './SocialLinks.astro';
import personal from '../data/personal.json';
---

<section class="hero">
  <!-- Decorative background shapes -->
  <div class="hero-bg" aria-hidden="true">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>
  </div>

  <div class="hero-content container">
    <div class="hero-text">
      <p class="hero-greeting animate-fade-in">Hi there, I'm</p>
      <h1 class="hero-name animate-fade-in animate-delay-1">
        <span class="gradient-text">{personal.name}</span>
      </h1>
      <p class="hero-title animate-fade-in animate-delay-2">{personal.title}</p>
      <p class="hero-bio animate-fade-in animate-delay-3">{personal.bio}</p>

      <div class="hero-actions animate-fade-in animate-delay-4">
        <Button href="/projets" variant="primary" size="lg">
          View My Work
        </Button>
        <Button href={personal.social.github} variant="outline" size="lg" external>
          GitHub
        </Button>
      </div>

      <div class="hero-social animate-fade-in animate-delay-4">
        <SocialLinks size="md" />
      </div>
    </div>

    <div class="hero-visual animate-fade-in">
      <div class="hero-image-wrapper">
        <div class="hero-image-placeholder">
          <span class="initials">{personal.name.split(' ').map((n: string) => n[0]).join('')}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: calc(100vh - var(--header-height));
    display: flex;
    align-items: center;
    padding: var(--space-16) 0;
    overflow: hidden;
  }

  /* Background decorations */
  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
    z-index: 0; /* Blobs behind particles (5) */
  }

  .blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.6;
    animation: float 6s ease-in-out infinite;
  }

  .blob-1 {
    top: 10%;
    right: 10%;
    width: 400px;
    height: 400px;
    background: var(--color-primary);
    animation-delay: 0s;
  }

  .blob-2 {
    bottom: 20%;
    left: 5%;
    width: 300px;
    height: 300px;
    background: var(--color-secondary-dark);
    animation-delay: 2s;
  }

  .blob-3 {
    top: 40%;
    left: 30%;
    width: 250px;
    height: 250px;
    background: var(--color-accent);
    animation-delay: 4s;
  }

  .hero-content {
    position: relative;
    z-index: 10; /* Above particles (5) */
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr 1fr;
    }
  }

  .hero-text {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .hero-text {
      text-align: left;
    }
  }

  .hero-greeting {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    margin-bottom: var(--space-2);
  }

  .hero-name {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: var(--font-extrabold);
    line-height: 1.1;
    margin-bottom: var(--space-4);
  }

  .hero-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
  }

  .hero-bio {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    max-width: 500px;
    margin-bottom: var(--space-8);
  }

  @media (min-width: 1024px) {
    .hero-bio {
      margin-left: 0;
      margin-right: auto;
    }
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;
    margin-bottom: var(--space-8);
  }

  @media (min-width: 1024px) {
    .hero-actions {
      justify-content: flex-start;
    }
  }

  .hero-social {
    display: flex;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .hero-social {
      justify-content: flex-start;
    }
  }

  /* Hero visual/image */
  .hero-visual {
    display: none;
  }

  @media (min-width: 1024px) {
    .hero-visual {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }

  .hero-image-wrapper {
    position: relative;
    width: 350px;
    height: 350px;
  }

  .hero-image-wrapper::before {
    content: '';
    position: absolute;
    inset: -10px;
    background: var(--gradient-primary);
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    animation: morph 8s ease-in-out infinite;
    z-index: -1;
  }

  @keyframes morph {
    0%, 100% {
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }
    25% {
      border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%;
    }
    50% {
      border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%;
    }
    75% {
      border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%;
    }
  }

  .hero-image-placeholder {
    width: 100%;
    height: 100%;
    background: var(--bg-secondary);
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-6xl);
    font-weight: var(--font-bold);
    color: var(--color-primary);
    box-shadow: var(--shadow-xl);
  }

  .initials {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Animation classes */
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }

  .animate-delay-1 { animation-delay: 0.1s; }
  .animate-delay-2 { animation-delay: 0.2s; }
  .animate-delay-3 { animation-delay: 0.3s; }
  .animate-delay-4 { animation-delay: 0.4s; }
</style>
